<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:cache="http://www.springframework.org/schema/cache" xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
	    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
	    http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache.xsd">


    <context:component-scan base-package="org.jumbodb.database.service" />


    <util:properties id="defaultProperties">
        <prop key="jumbodb.import.port">12001</prop>
        <prop key="jumbodb.query.port">12002</prop>
        <prop key="jumbodb.datapath">~/jumbodb/data</prop>
        <prop key="jumbodb.indexpath">~/jumbodb/index</prop>
    </util:properties>

    <!-- CARSTEN later set config file over initializer -->
    <context:property-placeholder
            properties-ref="defaultProperties"
            location="file:/etc/jumbodb.conf"
            local-override="false"
            ignore-resource-not-found="true"
            ignore-unresolvable="true"
            file-encoding="UTF-8" />


</beans>
