# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Collections
GET     /collections                controllers.Collections.overview
GET     /collections/:collection/deleteCompleteCollection  controllers.Collections.deleteCompleteCollection(collection:String)
GET     /collections/:collection/:chunkDeliveryKey/:version/deleteChunkedVersionInCollection  controllers.Collections.deleteChunkedVersionInCollection(collection: String, chunkDeliveryKey: String, version: String)
GET     /collections/:collection/:chunkDeliveryKey/:version/activateChunkedVersionInCollection  controllers.Collections.activateChunkedVersionInCollection(collection: String, chunkDeliveryKey: String, version: String)

GET     /deliveries                 controllers.Deliveries.overview
GET     /deliveries/:collection/:chunkDeliveryKey/:version/deleteChunkedVersionInCollection  controllers.Deliveries.deleteChunkedVersionInCollection(collection: String, chunkDeliveryKey: String, version: String)
GET     /deliveries/:collection/:chunkDeliveryKey/:version/activateChunkedVersionInCollection  controllers.Deliveries.activateChunkedVersionInCollection(collection: String, chunkDeliveryKey: String, version: String)
GET     /deliveries/:chunkDeliveryKey/:version/deleteChunkedVersionForAllCollections  controllers.Deliveries.deleteChunkedVersionForAllCollections(chunkDeliveryKey: String, version: String)
GET     /deliveries/:chunkDeliveryKey/:version/activateChunkedVersionForAllCollections  controllers.Deliveries.activateChunkedVersionForAllCollections(chunkDeliveryKey: String, version: String)


GET     /monitoring                 controllers.Monitoring.overview
GET     /maintenance                 controllers.Maintenance.overview
GET     /browse                 controllers.Browse.overview

# Signup
GET     /signup                     controllers.SignUp.form
GET     /users/fakeuser             controllers.SignUp.editForm
POST    /signup                     controllers.SignUp.submit

# Contact
GET     /contacts                   controllers.Contacts.form
GET     /contacts/fakecontact       controllers.Contacts.editForm
POST    /contacts                   controllers.Contacts.submit


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
